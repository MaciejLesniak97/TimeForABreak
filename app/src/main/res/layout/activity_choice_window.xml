<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choiceWindow"
    android:background="#fff">

    <ImageView
        android:id="@+id/snakeGame"
        android:layout_width="286dp"
        android:layout_height="240dp"
        android:clickable="true"
        android:onClick="snakeStart"
        app:layout_constraintBottom_toTopOf="@+id/breakoutGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/snake" />

    <ImageView
        android:id="@+id/breakoutGame"
        android:layout_width="286dp"
        android:layout_height="240dp"
        android:clickable="true"
        android:onClick="breakoutStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snakeGame"
        app:srcCompat="@drawable/breakout" />
</androidx.constraintlayout.widget.ConstraintLayout>